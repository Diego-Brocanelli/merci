<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Merci Store{% endblock %}</title>
    {% block stylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
        {% if app.environment == 'prod' %}
            <link href="//cdn.jsdelivr.net/semantic-ui/0.19.0/css/semantic.min.css" rel="stylesheet" type="text/css">
        {% else %}
            <link href="//cdn.jsdelivr.net/semantic-ui/0.19.0/css/semantic.css" rel="stylesheet" type="text/css">
        {% endif %}
        <link href="{{ asset('bundles/storemain/css/main.css') }}" rel="stylesheet" type="text/css">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
</head>
<body>
    {% set menu %}
        <a class="item" href="{{ path('store_main_home') }}">
            <i class="home icon"></i> Home
        </a>
        <a class="item" href="{{ path('store_catalog_index') }}">
            <i class="grid layout icon"></i> Catalog
        </a>
    {% endset %}

    <header class="ui inverted menu">
        <h1 class="title header item">Merci Store</h1>
        <nav class="main">
            {{ menu }}
        </nav>
        <nav class="right menu">
            <a class="ui item black icon button">
                <i class="reorder icon"></i>
            </a>
        </nav>
    </header>

    <nav class="ui left thin sidebar inverted vertical menu">
        {{ menu }}
    </nav>

    {% block body %}{% endblock %}

    {% block javascripts %}
        {% if app.environment == 'prod' %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
            <script src="//cdn.jsdelivr.net/semantic-ui/0.19.0/javascript/semantic.min.js"></script>
        {% else %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.js"></script>
            <script src="//cdn.jsdelivr.net/semantic-ui/0.19.0/javascript/semantic.js"></script>
        {% endif %}
        <script src="{{ asset('bundles/storemain/js/main.js') }}"></script>
    {% endblock %}

    {% if app.environment == 'dev' %}
        <div id="debug" class="ui label">
            <i class="mobile icon"></i>
            <i class="tablet icon"></i>
            <i class="desktop icon"></i>
        </div>
    {% endif %}
</body>
</html>
